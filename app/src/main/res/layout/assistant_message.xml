<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding8dp">

    <ImageView
        android:id="@+id/userImageWindow"
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/assistant_img"
    />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userNameWindow"
        app:layout_constraintLeft_toRightOf="@id/userImageWindow"
        android:background="@drawable/assistant_bubble"
        android:paddingLeft="@dimen/padding8dp"
        android:paddingRight="@dimen/padding8dp"
        android:paddingTop="@dimen/padding4dp"
        android:paddingBottom="@dimen/padding4dp"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/userNameWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ассистент"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/messageTextView"
        android:paddingTop="@dimen/padding4dp"
        android:paddingBottom="@dimen/padding4dp"
        android:paddingRight="@dimen/padding4dp"
        />

    <TextView
        android:id="@+id/messageDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:32"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/messageTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/padding4dp"
        android:paddingBottom="@dimen/padding4dp"
        android:paddingRight="@dimen/padding4dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>